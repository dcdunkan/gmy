{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES2019",
    "lib": [
      "ES2019"
    ],
    "declaration": false,
    "strict": false,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "outDir": "./dist"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}